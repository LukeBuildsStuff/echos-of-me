# Echoes of Me - Local Development Environment Template
# Copy this file to .env.local and customize for your setup

# =============================================================================
# ENVIRONMENT CONFIGURATION
# =============================================================================
NODE_ENV=development
DEBUG=true

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Local PostgreSQL (Docker)
DATABASE_URL=postgresql://echosofme:dev_password@localhost:5432/echosofme_dev

# Production Database URLs (for migration reference)
# NEON_DATABASE_URL=postgresql://user:pass@ep-xyz.us-east-1.aws.neon.tech/echosofme
# SUPABASE_DATABASE_URL=postgresql://postgres:pass@db.xyz.supabase.co:5432/postgres
# UPSTASH_POSTGRES_URL=postgresql://user:pass@us-east-1.sql.upstash.io:5432/dbname

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
# Local Redis (Docker)
REDIS_URL=redis://localhost:6379

# Production Redis URLs (for migration reference)
# UPSTASH_REDIS_URL=redis://user:pass@global-xyz.upstash.io:6379
# REDIS_CLOUD_URL=redis://user:pass@redis-xyz.c1.us-east-1-2.ec2.cloud.redislabs.com:6379

# =============================================================================
# NEXT AUTH CONFIGURATION
# =============================================================================
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-development-secret-key-minimum-32-characters-long

# OAuth Providers (optional for local development)
# GOOGLE_CLIENT_ID=your_google_client_id
# GOOGLE_CLIENT_SECRET=your_google_client_secret
# GITHUB_CLIENT_ID=your_github_client_id
# GITHUB_CLIENT_SECRET=your_github_client_secret

# =============================================================================
# AI TRAINING CONFIGURATION
# =============================================================================
RTX_TRAINING_ENABLED=true
RTX_GPU_DEVICE=0
RTX_GPU_MEMORY_LIMIT=24gb
RTX_MAX_CONCURRENT_JOBS=2

# Training Paths
VOICE_STORAGE_PATH=./public/voices
MODEL_STORAGE_PATH=./models
TRAINING_DATA_PATH=./data/training

# =============================================================================
# MONITORING & OBSERVABILITY
# =============================================================================
MONITORING_ENABLED=true
LOG_LEVEL=debug

# Application Performance Monitoring (for production)
# SENTRY_DSN=your_sentry_dsn
# DATADOG_API_KEY=your_datadog_api_key

# =============================================================================
# EMAIL CONFIGURATION (for notifications)
# =============================================================================
# SMTP Settings (optional for local development)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASS=your_app_password
# FROM_EMAIL=noreply@yourdomain.com

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# =============================================================================
# FEATURE FLAGS (for gradual rollouts)
# =============================================================================
FEATURE_VOICE_CLONING=true
FEATURE_ADVANCED_ANALYTICS=true
FEATURE_REAL_TIME_TRAINING=true
FEATURE_GRIEF_SENSITIVITY=true

# =============================================================================
# CLOUD MIGRATION PREPARATION
# =============================================================================
# These will be used when migrating to cloud
CLOUD_PROVIDER=aws  # aws, gcp, azure
DEPLOYMENT_REGION=us-east-1
AUTO_SCALING_ENABLED=false
CDN_ENABLED=false

# Cloud Storage (for when you scale)
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=your-bucket-name

# Google Cloud (alternative)
# GOOGLE_CLOUD_PROJECT_ID=your-project-id
# GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================
# Hot reload settings
FAST_REFRESH=true
TYPESCRIPT_TYPE_CHECKING=true

# Database debugging
DB_QUERY_LOGGING=true
DB_SLOW_QUERY_THRESHOLD=1000

# Performance monitoring
PERFORMANCE_MONITORING=true
MEMORY_MONITORING=true

# =============================================================================
# PRODUCTION READINESS CHECKLIST
# =============================================================================
# When moving to production, ensure these are properly configured:
# - Change all passwords and secrets
# - Set NODE_ENV=production
# - Configure proper DATABASE_URL for your cloud provider
# - Set up proper REDIS_URL for production
# - Configure NEXTAUTH_URL with your domain
# - Set up proper email configuration
# - Configure monitoring and error tracking
# - Set up proper CORS origins
# - Enable rate limiting with appropriate limits
# - Configure cloud storage settings