<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Personal AI Clone - Your digital legacy and conversation partner">
    <title><%= title || 'Personal AI Clone' %></title>
    
    <!-- Google Fonts - Memory & Legacy Theme -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Crimson+Text:ital,wght@0,400;0,600;1,400;1,600&display=swap" rel="stylesheet">
    
    <!-- CSS -->
    <link rel="stylesheet" href="/css/main.css">
    <% if (typeof additionalCSS !== 'undefined') { %>
        <% additionalCSS.forEach(css => { %>
            <link rel="stylesheet" href="<%= css %>">
        <% }) %>
    <% } %>
    
    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg">
    
    <!-- Meta tags for mobile optimization -->
    <meta name="theme-color" content="#4f46e5">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="default">
</head>
<body>
    <!-- Skip link for accessibility -->
    <a href="#main-content" class="skip-link">Skip to main content</a>
    
    <!-- Navigation (only show if user is logged in) -->
    <% if (typeof user !== 'undefined' && user) { %>
    <nav class="nav">
        <div class="container">
            <div class="nav-content">
                <a href="/dashboard" class="nav-brand">Personal AI</a>
                
                <!-- Mobile menu toggle -->
                <button class="nav-toggle" id="nav-toggle" aria-label="Toggle navigation">
                    â˜°
                </button>
                
                <!-- Navigation menu -->
                <ul class="nav-menu" id="nav-menu">
                    <li><a href="/dashboard" class="nav-link">Dashboard</a></li>
                    <li><a href="/chat" class="nav-link">Chat</a></li>
                    <li><a href="/data" class="nav-link">My Data</a></li>
                    <% if (user.isAdmin) { %>
                    <li><a href="/admin" class="nav-link">Admin</a></li>
                    <% } %>
                    <li>
                        <form method="POST" action="/logout" style="display: inline;">
                            <button type="submit" class="btn btn-sm btn-secondary">Logout</button>
                        </form>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <% } %>
    
    <!-- Main content -->
    <main id="main-content" class="<%= typeof user !== 'undefined' && user ? '' : 'min-h-screen flex items-center justify-center' %>">
        <%- body %>
    </main>
    
    <!-- Footer (optional) -->
    <% if (typeof user !== 'undefined' && user) { %>
    <footer class="bg-gray-50 mt-16">
        <div class="container">
            <div class="py-8 text-center text-sm text-gray-600">
                <p>&copy; 2025 Personal AI Clone. Preserving your legacy through technology.</p>
            </div>
        </div>
    </footer>
    <% } %>
    
    <!-- JavaScript -->
    <script src="/js/app.js"></script>
    <% if (typeof additionalJS !== 'undefined') { %>
        <% additionalJS.forEach(js => { %>
            <script src="<%= js %>"></script>
        <% }) %>
    <% } %>
    
    <!-- Toast notifications container -->
    <div id="toast-container" class="fixed top-4 right-4" style="z-index: 1000;"></div>
</body>
</html>