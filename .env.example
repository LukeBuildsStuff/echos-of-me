# Example Environment Configuration for EchosOfMe
# Copy this file to .env.local for development or .env.production for production

# NextAuth Configuration
NEXTAUTH_SECRET=generate-a-secure-random-string-here
NEXTAUTH_URL=http://localhost:3000

# Database Configuration
# Development: Use Docker PostgreSQL
DATABASE_URL=postgresql://personalai:personalai123@localhost:5432/personalai
# Production: Use Neon PostgreSQL
# DATABASE_URL=postgresql://username:password@ep-xxx.us-east-1.aws.neon.tech/neondb?sslmode=require

# Redis Configuration
# Development: Use Docker Redis
REDIS_URL=redis://localhost:6379
# Production: Use Upstash Redis
# REDIS_URL=rediss://default:password@region.upstash.io:port

# RTX 5090 Local GPU Configuration (Hybrid Architecture)
RTX_GPU_ENDPOINT=http://localhost:8000
RTX_GPU_API_KEY=your-local-rtx-api-key

# ML Inference Configuration (Fallback)
ML_INFERENCE_URL=http://localhost:8001
ML_INFERENCE_API_KEY=your-ml-api-key

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Development Settings
NODE_ENV=development
PORT=3000

# Security Configuration
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=15

# Feature Flags
ENABLE_RTX_FALLBACK=true
ENABLE_VOICE_TRAINING=true
ENABLE_ADMIN_FEATURES=true